<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.controllers.FriendsManagerController">

    <top>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Button text="Back" onAction="#goBack"
                    style="-fx-font-weight: bold;"/>

            <Label text="Friends Manager"
                   style="-fx-font-size: 18px; -fx-font-weight: bold;" />

            <Region HBox.hgrow="ALWAYS"/>

            <Button text="Requests" onAction="#openRequests"/>

            <Label fx:id="requestsCountLabel"
                   text="0"
                   style="-fx-background-color: red;
                          -fx-text-fill: white;
                          -fx-padding: 2 6 2 6;
                          -fx-background-radius: 10;"/>
        </HBox>
    </top>

    <center>
        <SplitPane dividerPositions="0.5">

            <VBox spacing="10">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>

                <Label text="Users"
                       style="-fx-font-size: 14px; -fx-font-weight: bold;" />

                <Label text="Select a user to be friends with:"
                       style="-fx-font-size: 15;"/>

                <TableView fx:id="usersTable" prefHeight="338">
                    <columns>
                        <TableColumn fx:id="usersUsernameCol"
                                     text="Username"
                                     prefWidth="200"/>
                    </columns>
                </TableView>

                <HBox spacing="10" alignment="CENTER">
                    <Button fx:id="usersPrevBtn"
                            text="Previous"
                            onAction="#usersPrev"/>

                    <Label fx:id="usersPageLabel"
                           text="Page 1 / 1"/>

                    <Button fx:id="usersNextBtn"
                            text="Next"
                            onAction="#usersNext"/>
                </HBox>

                <Region VBox.vgrow="ALWAYS"/>

                <Button text="Send Friend Request"
                        onAction="#sendRequest"/>
                <Button fx:id="viewProfileFromUsersBtn" text="View User Profile" onAction="#viewProfileFromUsers"
                        disable="true" HBox.hgrow="ALWAYS" />
            </VBox>

            <VBox spacing="10">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>

                <Label text="Your Friends"
                       style="-fx-font-size: 14px; -fx-font-weight: bold;" />

                <Label text="Select a user you no longer want to be friends with:"
                       style="-fx-font-size: 15;"/>

                <TableView fx:id="friendsTable" prefHeight="338">
                    <columns>
                        <TableColumn fx:id="friendsUsernameCol"
                                     text="Username"
                                     prefWidth="200"/>
                    </columns>
                </TableView>

                <HBox spacing="10" alignment="CENTER">
                    <Button fx:id="friendsPrevBtn"
                            text="Previous"
                            onAction="#friendsPrev"/>

                    <Label fx:id="friendsPageLabel"
                           text="Page 1 / 1"/>

                    <Button fx:id="friendsNextBtn"
                            text="Next"
                            onAction="#friendsNext"/>
                </HBox>

                <HBox spacing="10">
                    <Button fx:id="viewProfileFromFriendsBtn" text="View User Profile" onAction="#viewProfileFromFriends"
                            disable="true" HBox.hgrow="ALWAYS"
                            style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-size: 14; -fx-padding: 10; -fx-background-radius: 5;"/>
                    <Button text="Remove Friend" onAction="#removeFriend" HBox.hgrow="ALWAYS"
                            style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 14; -fx-padding: 10; -fx-background-radius: 5;"/>
                </HBox>
            </VBox>

        </SplitPane>
    </center>

</BorderPane>