<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.controllers.ForgotPasswordController"
      alignment="CENTER"
      spacing="15"
      style="-fx-background-color: #f2f2f2;">

    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>

    <Label text="Reset Password"
           style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10" alignment="CENTER">

        <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="usernameField"
                   GridPane.rowIndex="0"
                   GridPane.columnIndex="1"/>

        <Label text="New password:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <PasswordField fx:id="newPasswordField"
                       GridPane.rowIndex="1"
                       GridPane.columnIndex="1"/>

        <Label text="Confirm password:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <PasswordField fx:id="confirmPasswordField"
                       GridPane.rowIndex="2"
                       GridPane.columnIndex="1"/>

    </GridPane>

    <HBox alignment="CENTER" spacing="10">
        <Button text="Back" onAction="#goBack"/>
        <Button text="Reset" onAction="#handleResetPassword"/>
    </HBox>

    <Label fx:id="infoLabel"
           textFill="red"/>

</VBox>
