<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<BorderPane prefHeight="650.0"
            prefWidth="900.0" xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.controllers.RaceEventController">

    <top>
        <VBox spacing="10.0" style="-fx-background-color: #357ABD;">
            <padding>
                <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
            </padding>
            <children>
                <HBox alignment="CENTER_LEFT" spacing="20.0">
                    <children>
                        <Label text="Duck Race Events" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Label>
                        <Region HBox.hgrow="ALWAYS" />
                        <ProgressIndicator fx:id="progressIndicator" prefHeight="30.0" prefWidth="30.0" visible="false" />
                        <Button fx:id="refreshButton" onAction="#handleRefresh" style="-fx-background-color: white; -fx-text-fill: #357ABD;" text="Refresh List" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </top>

    <center>
        <SplitPane dividerPositions="0.4">
            <items>
                <VBox spacing="10.0">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                    <children>
                        <Label text="Available Events">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
                        <ListView fx:id="eventsListView" VBox.vgrow="ALWAYS" />

                        <Separator />

                        <Label text="Participants (Ducks)">
                            <font>
                                <Font name="System Bold" size="13.0" />
                            </font>
                        </Label>
                        <ListView fx:id="participantsListView" prefHeight="150.0" />

                        <Label text="Subscribers">
                            <font>
                                <Font name="System Bold" size="13.0" />
                            </font>
                        </Label>
                        <ListView fx:id="subscribersListView" prefHeight="150.0" />
                    </children>
                </VBox>

                <VBox spacing="15.0">
                    <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                    </padding>
                    <children>
                        <HBox spacing="10.0">
                            <children>
                                <Button fx:id="subscribeButton" maxWidth="1.7976931348623157E308" onAction="#handleSubscribe" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="ðŸ”” Subscribe" HBox.hgrow="ALWAYS" />
                                <Button fx:id="unsubscribeButton" maxWidth="1.7976931348623157E308" onAction="#handleUnsubscribe" style="-fx-background-color: #f44336; -fx-text-fill: white;" text="ðŸ”• Unsubscribe" HBox.hgrow="ALWAYS" />
                            </children>
                        </HBox>

                        <HBox spacing="10.0">
                            <children>
                                <Button fx:id="participateButton" maxWidth="1.7976931348623157E308" onAction="#handleParticipate" style="-fx-background-color: #2196F3; -fx-text-fill: white;" text="ðŸŠ Participate" HBox.hgrow="ALWAYS" />
                                <Button fx:id="withdrawButton" maxWidth="1.7976931348623157E308" onAction="#handleWithdraw" style="-fx-background-color: #FF9800; -fx-text-fill: white;" text="ðŸƒ Withdraw" HBox.hgrow="ALWAYS" />
                            </children>
                        </HBox>

                        <Label text="Race Activity Log:">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
                        <TextArea fx:id="raceLogTextArea" prefHeight="350.0" style="-fx-font-family: 'Courier New'; -fx-font-size: 12;" VBox.vgrow="ALWAYS" />

                        <HBox alignment="CENTER_RIGHT" spacing="10.0">
                            <children>
                                <Button onAction="#handleClearLog" text="Clear Log" />
                                <Region HBox.hgrow="ALWAYS" />
                                <Button fx:id="deleteEventButton" onAction="#handleDeleteEvent" style="-fx-background-color: #f44336; -fx-text-fill: white;" text="Delete Event" />
                                <Button fx:id="createEventButton" onAction="#handleCreateEvent" prefWidth="120.0" text="Create Event" />
                                <Button fx:id="startRaceButton" onAction="#handleStartRace" prefWidth="120.0" style="-fx-background-color: #357ABD; -fx-text-fill: white; -fx-font-weight: bold;" text="ðŸ START RACE" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </items>
        </SplitPane>
    </center>

    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #f5f5f5; -fx-border-color: #cccccc; -fx-border-width: 1 0 0 0;">
            <padding>
                <Insets bottom="5.0" left="15.0" right="15.0" top="5.0" />
            </padding>
            <children>
                <Label text="Status:" textFill="#666666" />
                <Label fx:id="statusLabel" text="Ready" textFill="#333333" />
                <Region HBox.hgrow="ALWAYS" />
                <Button onAction="#handleClose" text="Close" />
            </children>
        </HBox>
    </bottom>
</BorderPane>