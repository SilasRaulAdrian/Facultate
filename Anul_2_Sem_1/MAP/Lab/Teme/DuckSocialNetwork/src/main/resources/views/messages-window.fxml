<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" alignment="CENTER"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.controllers.MessagesController"
      style="-fx-padding: 20;">

    <Label text="Select a user to chat with" style="-fx-font-size: 20;"/>

    <TableView fx:id="usersTable" prefHeight="400">
        <columns>
            <TableColumn fx:id="colName" text="Username" prefWidth="200"/>
            <TableColumn fx:id="colEmail" text="Email" prefWidth="200"/>
        </columns>
    </TableView>

    <HBox alignment="CENTER" spacing="10">
        <Button text="Back" onAction="#goBack"/>
        <Button text="Open Chat" onAction="#openChat"/>
    </HBox>

</VBox>
