<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.controllers.AddFriendshipController"
      alignment="CENTER" spacing="20" style="-fx-padding: 20;">

    <Label text="Add Friendship" style="-fx-font-size: 26px; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10" alignment="CENTER">
        <Label text="User 1 ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="user1Field" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="User 2 ID:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="user2Field" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox alignment="CENTER" spacing="10">
        <Button text="Back" onAction="#goBack"/>
        <Button text="Add" defaultButton="true" onAction="#handleAdd"/>
    </HBox>
</VBox>
