<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.controllers.ChatController"
      spacing="10" style="-fx-padding: 15;">

    <Label fx:id="chatLabel"
           style="-fx-font-size: 20px; -fx-font-weight: bold"/>

    <ScrollPane fx:id="scrollPane" fitToWidth="true" prefHeight="450">
        <VBox fx:id="messagesBox" spacing="8" style="-fx-padding: 10;"/>
    </ScrollPane>

    <VBox fx:id="replyBox" spacing="5" visible="false"
          style="-fx-background-color: #f0f0f0; -fx-padding: 5; -fx-background-radius: 5;">
        <HBox spacing="5" alignment="CENTER_LEFT">
            <Label text="Replying to:" style="-fx-text-fill: #888; -fx-font-size: 11; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="X" onAction="#cancelReply"
                    style="-fx-background-color: transparent; -fx-text-fill: #888; -fx-font-size: 16; -fx-cursor: hand;"
                    prefWidth="25" prefHeight="25"/>
        </HBox>
        <Label fx:id="replyLabel"
               wrapText="true"
               style="-fx-text-fill: #555; -fx-font-size: 13;"/>
    </VBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button text="Back" onAction="#goBack" prefWidth="80"/>
        <TextField fx:id="messageField" HBox.hgrow="ALWAYS"/>
        <Button text="Send" onAction="#sendMessage" defaultButton="true" prefWidth="80"/>
    </HBox>

</VBox>
