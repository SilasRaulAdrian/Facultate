<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.controllers.PersonsController"
      alignment="CENTER" spacing="20" style="-fx-label-padding: 20 20 20 20;">

    <Label text="Persons" style="-fx-font-size: 30px; -fx-font-weight: bold;"/>

    <TableView fx:id="table" prefHeight="146" prefWidth="865">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
            <TableColumn fx:id="colUsername" text="Username" prefWidth="150"/>
            <TableColumn fx:id="colEmail" text="Email" prefWidth="150"/>
            <TableColumn fx:id="colNume" text="Nume" prefWidth="100"/>
            <TableColumn fx:id="colPrenume" text="Prenume" prefWidth="100"/>
            <TableColumn fx:id="colOcupatie" text="Ocupatie" prefWidth="120"/>
            <TableColumn fx:id="colEmpatie" text="Empatie" prefWidth="80"/>
            <TableColumn fx:id="colData" text="Data Nasterii" prefWidth="120"/>
        </columns>
    </TableView>

    <HBox alignment="CENTER" spacing="20">
        <Button fx:id="prevButton" text="Previous" onAction="#handlePrevious"/>
        <Label fx:id="pageInfoLabel" text="Page X of Y"/>
        <Button fx:id="nextButton" text="Next" onAction="#handleNext"/>
    </HBox>

    <HBox alignment="CENTER" spacing="15">
        <Button text="Add Person" onAction="#openAddWindow"/>
        <Button text="Delete Selected" onAction="#deleteSelected"/>
    </HBox>

    <Button alignment="CENTER" text="Back" onAction="#goBack"/>
</VBox>
