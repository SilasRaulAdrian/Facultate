<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.controllers.LoginController"
      alignment="CENTER" spacing="15"
      style="-fx-background-color: #f2f2f2;">

    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <Label text="Duck Social Network" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <GridPane alignment="CENTER" hgap="10" vgap="10">
        <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Login" onAction="#handleLogin" defaultButton="true" prefWidth="100"/>
        <Button text="Register" onAction="#openRegisterWindow" prefWidth="100"/>
    </HBox>

    <Label fx:id="errorLabel" textFill="red"/>
    <Button alignment="CENTER" onAction="#handleExit" prefHeight="37.0" prefWidth="160.0" text="Exit" style="-fx-font-size: 22px"/>

</VBox>
